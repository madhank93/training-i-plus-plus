{
    "swagger": "2.0",
    "info": {
        "description": "This microservice is for orders module in the online shopping application.",
        "title": "Online Shopping Application - Orders Module",
        "contact": {
            "name": "Chahat Bhatia",
            "email": "chahatbhatia2014@gmail.com"
        },
        "license": {
            "name": "Apache 2.0"
        },
        "version": "1.0"
    },
    "host": "localhost:8082",
    "paths": {
        "/orders/place_order/:user_id": {
            "post": {
                "description": "This request will allow user to place order.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Order"
                ],
                "summary": "To place order in the application",
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/model.Order"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "number"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.Order": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "order_cart": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.ProductUser"
                    }
                },
                "ordered_at": {
                    "description": "Category\t\tstring\t\t\t\t\t`json:\"category\" validate:\"required\"`\n\tPrice\t\t    uint\t\t\t        `json:\"price\" bson:\"price\"`\nSeller\t\t\tstring\t\t\t\t\t`json:\"seller\" validate:\"required\"`",
                    "type": "string"
                },
                "payment": {
                    "description": "Ratings         uint                    `json:\"ratings\"      bson:\"ratings\"`\n\tImageUrl        string                  `json:\"image_url\"    bson:\"image_url\"`\n\tProducts        Products[]",
                    "type": "string"
                },
                "user_id": {
                    "description": "Updated_at\t\ttime.Time\t\t\t\t`json:\"updated_at\"`",
                    "type": "string"
                }
            }
        },
        "model.ProductUser": {
            "type": "object",
            "required": [
                "category",
                "price",
                "seller",
                "title"
            ],
            "properties": {
                "category": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "image_url": {
                    "type": "string"
                },
                "price": {
                    "type": "integer"
                },
                "product_id": {
                    "type": "string"
                },
                "ratings": {
                    "type": "integer"
                },
                "seller": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer Token": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}